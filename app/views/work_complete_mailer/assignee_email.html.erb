

    <h1>Work is complete on Circa Order <%= @order.id %>!</h1>


    <% if Rails.env != 'production' %>
    <h2>
      This email was generated by the <%= Rails.env %> version of Circa --
      PLEASE DISREGARD
    </h2>
    <% end %>


    <p>View this order: <%= link_to(nil, @order_url) %></p>

    <h2>Order details:</h2>

    <p>
    <strong>Date/time created:</strong>
    <%= @order.created_at.strftime('%B %e, %Y') %>, <%= @order.created_at.strftime('%l:%M %p') %>
    </p>


    <p>
    <strong>Requester:</strong>
    <% @order.users.each do |u| %>
      <%= u.last_name %>, <%= u.first_name %> (<%= u.email %>)<%= u != @order.users.last ? '; ' : '' %>
    <% end %>
    </p>


    <% if @order.item_orders && @order.item_orders.length > 0 %>
      <h2>Items requested</h2>

      <% @order.item_orders.each do |io| %>
        <p>
          <strong><%= io.item.resource_title %><%= io.item.container ? ". #{io.item.container}" : '' %></strong><br>
          <%= io.reproduction_spec.pages %> pages/files<br>
        </p>
      <% end %>
    <% end %>


    <% if @order.digital_image_orders && @order.digital_image_orders.length > 0 %>
      <% @order.digital_image_orders.each do |dio| %>
        <p>
          <strong><%= dio.resource_title %></strong><br>
          <%= dio.display_uri %>
        </p>
      <% end %>
    <% end %>
