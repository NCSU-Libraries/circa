'use strict';

// Declare app level module which depends on filters, and services
var circaApp = angular.module('circaApp', [
  'ngRoute',
  // 'ngAnimate',
  'commonFilters',
  'commonDirectives',
  'formDirectives',
  'circaControllers',
  'mm.foundation',
  'angucomplete-alt',
  'countrySelect',
  'bcherny/formatAsCurrency'
]);

circaApp.config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider) {
  var rootPath = '<%= Rails.application.config.action_controller.relative_url_root %>';
  var templatePath = rootPath + '/templates/';
  $locationProvider.hashPrefix('');
  $routeProvider.when('/', { templateUrl: templatePath + 'application/dashboard.html' });

  $routeProvider.when('/orders', { templateUrl: templatePath + 'orders/list.html', reloadOnSearch: true });
  $routeProvider.when('/orders/new', { templateUrl: templatePath + 'orders/new.html' });
  $routeProvider.when('/orders/:orderId', { templateUrl: templatePath + 'orders/show.html' });
  $routeProvider.when('/orders/:orderId/edit', { templateUrl: templatePath + 'orders/edit.html' });
  $routeProvider.when('/orders/:orderId/clone', { templateUrl: templatePath + 'orders/clone.html' });

  $routeProvider.when('/items', { templateUrl: templatePath + 'items/list.html' });
  $routeProvider.when('/items/:itemId', { templateUrl: templatePath + 'items/show.html' });

  $routeProvider.when('/users', { templateUrl: templatePath + 'users/list.html' });
  $routeProvider.when('/users/new', { templateUrl: templatePath + 'users/new.html' });
  $routeProvider.when('/users/:userId', { templateUrl: templatePath + 'users/show.html' });
  $routeProvider.when('/users/:userId/new_order', { templateUrl: templatePath + 'orders/new.html' });
  $routeProvider.when('/users/:userId/edit', { templateUrl: templatePath + 'users/edit.html' });

  $routeProvider.when('/locations', { templateUrl: templatePath + 'locations/list.html' });
  $routeProvider.when('/locations/new', { templateUrl: templatePath + 'locations/new.html' });
  $routeProvider.when('/locations/:locationId', { templateUrl: templatePath + 'locations/show.html' });
  $routeProvider.when('/locations/:locationId/edit', { templateUrl: templatePath + 'locations/edit.html' });

  $routeProvider.when('/settings', { templateUrl: templatePath + 'application/settings.html' });
  $routeProvider.when('/settings/enumeration_values/list/:enumerationName', { templateUrl: templatePath + 'enumeration_values/list.html' });
  $routeProvider.when('/settings/enumeration_values/new/:enumerationName', { templateUrl: templatePath + 'enumeration_values/new.html' });
  $routeProvider.when('/settings/enumeration_values/:enumerationName/:enumerationValueId/edit', { templateUrl: templatePath + 'enumeration_values/edit.html' });
  $routeProvider.when('/settings/enumeration_values/:enumerationName/:enumerationValueId/merge', { templateUrl: templatePath + 'enumeration_values/merge.html' });

  $routeProvider.when('/settings/user_roles', { templateUrl: templatePath + 'user_roles/list.html' });
  $routeProvider.when('/settings/user_roles/new', { templateUrl: templatePath + 'user_roles/new.html' });
  $routeProvider.when('/settings/user_roles/:userRoleId/edit', { templateUrl: templatePath + 'user_roles/edit.html' });
  $routeProvider.when('/settings/user_roles/:userRoleId/merge', { templateUrl: templatePath + 'user_roles/merge.html' });
  $routeProvider.when('/settings/order_sub_types', { templateUrl: templatePath + 'order_sub_types/list.html' });
  $routeProvider.when('/settings/order_sub_types/new', { templateUrl: templatePath + 'order_sub_types/new.html' });
  $routeProvider.when('/settings/order_sub_types/:orderSubTypeId/edit', { templateUrl: templatePath + 'order_sub_types/edit.html' });

  $routeProvider.when('/reports', { templateUrl: templatePath + 'reports.html' });
  $routeProvider.when('/reports/:reportName', { templateUrl: templatePath + 'reports.html' });

}]);
